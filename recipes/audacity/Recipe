wget -q https://github.com/probonopd/AppImages/raw/master/functions.sh -O ./functions.sh
. ./functions.sh

APP=Audacity
LOWERAPP=audacity

sudo add-apt-repository -y ppa:audacity-team/daily 
sudo apt-get update
sudo apt-get -y install $LOWERAPP

mkdir -p $APP/$APP.AppDir
cd $APP/$APP.AppDir
find /var/cache/apt/archives/$LOWERAPP* -exec dpkg -x {} . \;

cp ./usr/share/applications/$LOWERAPP.desktop .
rm -rf ./usr/share/icons/48x48/apps

get_apprun

delete_blacklisted

VER1=$(ls /var/cache/apt/archives/$LOWERAPP_* | cut -d "_" -f 2 | cut -d "-" -f 1)
GLIBC_NEEDED=$(glibc_needed)
VERSION=$VER1.glibc$GLIBC_NEEDED
echo $VERSION

get_desktopintegration $LOWERAPP

# Go out of AppImage
cd ..

ARCH="x86_64"
generate_appimage
